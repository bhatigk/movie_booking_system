<div id="<%= dom_id movie %>">
  <p>
    <% if movie.poster.attached? %>
      <%= image_tag movie.poster, class: 'thumbnail' %>
    <% else %>
      No poster available
    <% end %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= movie.genre %>
  </p>

</div>
