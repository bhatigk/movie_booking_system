<%= form_with(model: showtime) do |form| %>
  <% if showtime.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(showtime.errors.count, "error") %> prohibited this showtime from being saved:</h2>

      <ul>
        <% showtime.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-4">
    <%= form.label :timing, class: "form-label" %>
    <%= form.select :timing, fetch_time_options, {}, class: "form-select" %>
  </div>

  <div class="field mb-4">
    <%= form.label :theater_id, class: "form-label" %>
    <%= form.collection_select :theater_id, @theaters, :id, :name, { prompt: 'Select Theater' }, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= form.label :movie_id, class: "form-label" %>
    <%= form.collection_select :movie_id, @movies, :id, :title, { prompt: 'Select Movie' }, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= form.label :from_date, class: "form-label" %>
    <%= form.date_field :from_date, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= form.label :to_date, class: "form-label" %>
    <%= form.date_field :to_date, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit :create, class: "btn btn-dark" %>
  </div>
<% end %>
